<Window x:Class="JobOffersManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Offers Manager"
        Height="550"
        Width="950"
        WindowStartupLocation="CenterScreen">

    <DockPanel Margin="15">

        <!-- Górne przyciski -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,15">

            <Button Content="Load"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Command="{Binding LoadCommand}" />

            <Button Content="Add"
                    Width="100"
                    Height="35"
                    Command="{Binding AddCommand}" />

        </StackPanel>

        <!-- Tabela -->
        <DataGrid ItemsSource="{Binding Jobs}"
                  SelectedItem="{Binding SelectedJob, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  Margin="0,0,0,15"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Title"
                                    Binding="{Binding Title}"
                                    Width="*"
                                    MinWidth="150" />

                <DataGridTextColumn Header="Location"
                                    Binding="{Binding Location}"
                                    Width="120" />

                <DataGridTextColumn Header="Seniority"
                                    Binding="{Binding Seniority}"
                                    Width="120" />

                <DataGridTextColumn Header="Company"
                                    Binding="{Binding Company}"
                                    Width="150" />

                <DataGridTextColumn Header="Created"
                                    Binding="{Binding Created, StringFormat='yyyy-MM-dd HH:mm'}"
                                    Width="160" />

            </DataGrid.Columns>

        </DataGrid>

        <!-- Dolne przyciski -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left">

            <Button Content="Edit Selected"
                    Width="150"
                    Height="35"
                    Margin="0,0,10,0"
                    Command="{Binding EditCommand}" />

            <Button Content="Delete Selected"
                    Width="150"
                    Height="35"
                    Command="{Binding DeleteCommand}" />

        </StackPanel>

    </DockPanel>
</Window>
