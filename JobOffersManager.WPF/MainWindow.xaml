<Window x:Class="JobOffersManager.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Offers Manager"
        Height="650"
        Width="1050"
        WindowStartupLocation="CenterScreen">

    <DockPanel Margin="15" LastChildFill="True">

        <!-- TOP: Load + Add -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,15">

            <Button Content="Load"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"
                    Command="{Binding LoadCommand}" />

            <Button Content="Add"
                    Width="100"
                    Height="35"
                    Command="{Binding AddCommand}" />

        </StackPanel>

        <!-- FILTER -->
        <StackPanel DockPanel.Dock="Top"
                    Orientation="Horizontal"
                    Margin="0,0,0,15">

            <TextBlock Text="Location:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>

            <TextBox Width="160"
                     Margin="0,0,15,0"
                     Text="{Binding FilterLocation}" />

            <TextBlock Text="Seniority:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0"/>

            <TextBox Width="160"
                     Margin="0,0,15,0"
                     Text="{Binding FilterSeniority}" />

            <Button Content="Search"
                    Width="100"
                    Height="30"
                    Command="{Binding SearchCommand}" />

        </StackPanel>

        <!-- BOTTOM: Edit/Delete -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left"
                    Margin="0,10,0,0">

            <Button Content="Edit Selected"
                    Width="160"
                    Height="35"
                    Margin="0,0,10,0"
                    Command="{Binding EditCommand}" />

            <Button Content="Delete Selected"
                    Width="160"
                    Height="35"
                    Command="{Binding DeleteCommand}" />

        </StackPanel>

        <!-- PAGINATION -->
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">

            <Button Content="Previous"
                    Width="100"
                    Margin="0,0,10,0"
                    Command="{Binding PreviousPageCommand}" />

            <TextBlock Text="{Binding CurrentPage}"
                       FontWeight="Bold"
                       VerticalAlignment="Center" />

            <TextBlock Text=" / "
                       VerticalAlignment="Center"
                       Margin="5,0" />

            <TextBlock Text="{Binding TotalPages}"
                       FontWeight="Bold"
                       VerticalAlignment="Center" />

            <Button Content="Next"
                    Width="100"
                    Margin="10,0,0,0"
                    Command="{Binding NextPageCommand}" />

        </StackPanel>

        <!-- DATA GRID (zajmuje środek) -->
        <DataGrid ItemsSource="{Binding Jobs}"
                  SelectedItem="{Binding SelectedJob, Mode=TwoWay}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="0,0,0,10">

            <DataGrid.Columns>

                <DataGridTextColumn Header="Title"
                                    Binding="{Binding Title}"
                                    Width="*"
                                    MinWidth="180" />

                <DataGridTextColumn Header="Location"
                                    Binding="{Binding Location}"
                                    Width="130" />

                <DataGridTextColumn Header="Seniority"
                                    Binding="{Binding Seniority}"
                                    Width="130" />

                <DataGridTextColumn Header="Company"
                                    Binding="{Binding Company}"
                                    Width="170" />

                <DataGridTextColumn Header="Created"
                                    Binding="{Binding Created, StringFormat=yyyy-MM-dd HH:mm}"
                                    Width="180" />

            </DataGrid.Columns>

        </DataGrid>

    </DockPanel>
</Window>
