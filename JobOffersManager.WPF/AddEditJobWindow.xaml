<Window x:Class="JobOffersManager.WPF.AddEditJobWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Job Offer" Height="450" Width="400">

    <ScrollViewer>
        <StackPanel Margin="15">

            <TextBlock Text="Title"/>
            <TextBox Text="{Binding Title}" Margin="0,0,0,10"/>

            <TextBlock Text="Location"/>
            <TextBox Text="{Binding Location}" Margin="0,0,0,10"/>

            <TextBlock Text="Seniority"/>
            <TextBox Text="{Binding Seniority}" Margin="0,0,0,10"/>

            <TextBlock Text="Company"/>
            <TextBox Text="{Binding Company}" Margin="0,0,0,10"/>

            <TextBlock Text="Description"/>
            <TextBox Text="{Binding Description}" Height="60" Margin="0,0,0,10"/>

            <TextBlock Text="Requirements"/>
            <TextBox Text="{Binding Requirements}" Height="60" Margin="0,0,0,20"/>

            <Button Content="Save"
                    Height="35"
                    Click="Save_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
